<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shubham.tripin1.offeehandler.RagActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewScanQr"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/textViewCurrentPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextCrateHpass"
        android:layout_alignStart="@+id/editTextCrateHpass"
        android:layout_below="@+id/editTextCrateHpass"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/editTextCrateHpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Create a Handler Password"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSetHpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Set"
        android:layout_below="@+id/editTextCrateHpass"
        android:layout_alignRight="@+id/editTextCrateHpass"
        android:layout_alignEnd="@+id/editTextCrateHpass" />

    <TextView
        android:id="@+id/textViewScanQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCurrentPass"
        android:layout_alignStart="@+id/textViewCurrentPass"
        android:layout_below="@+id/buttonSetHpass"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Or scan Qr code"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewGenerating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="161dp"
        android:text="Generating QR"
        android:visibility="gone" />
</RelativeLayout>
